<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">


    <TextView
        android:id="@+id/tvUserId"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_marginTop="220dp"
        android:text="User ID"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUserId"
        style="@android:style/Widget.EditText"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_box"
        android:ems="10"
        android:inputType="none|number"
        android:paddingLeft="20dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserId" />

    <EditText
        android:id="@+id/etRePassword"
        style="@android:style/Widget.DeviceDefault.Light.AutoCompleteTextView"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:autofillHints=""
        android:background="@drawable/custom_box"
        android:ems="10"
        android:inputType="textPassword|textWebPassword"
        android:paddingLeft="20dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRePassword" />

    <EditText
        android:id="@+id/etPassword"
        style="@android:style/Widget.EditText"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_box"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPassword" />

    <TextView
        android:id="@+id/tvRePassword"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_marginTop="50dp"
        android:text="Re-enter Password"
        android:textColor="#707070"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_marginTop="50dp"
        android:text="Password"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUserId" />

    <Button
        android:id="@+id/btnSignUp"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/custom_button"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#333232"
        android:textSize="30sp"
        app:backgroundTint="#D2C587"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRePassword" />


</androidx.constraintlayout.widget.ConstraintLayout>