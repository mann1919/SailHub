<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayRaceResult">


        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="85dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnGenerateResult"
            app:layout_constraintTop_toBottomOf="@+id/rvRace" />

        <TextView
            android:id="@+id/tvNameOfSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D2C587"
            android:padding="20dp"
            android:text="Series Name"
            android:textAlignment="center"
            android:textColor="#333232"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRace"
            android:layout_width="770dp"
            android:layout_height="600dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNameOfSeries" />

        <Button
            android:id="@+id/btnGenerateResult"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:background="@drawable/custom_button"
            android:text="Generate Results"
            android:textAllCaps="false"
            android:textColor="#333232"
            android:textSize="30sp"
            app:backgroundTint="#D2C587"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvRace" />

</androidx.constraintlayout.widget.ConstraintLayout>